
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PasswordReset</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="col-md-4 col-md-offset-4">

        <label>@ViewBag.Message</label>

        <h2>Parola Resetleme Ekranı</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.TextBox("Email", null, new { @class = "form-control", @placeholder = "E-Posta adresiniz" })
            <br />
            <input type="submit" class="btn btn-primary" name="name" value="Parola Resetleme Kodu Gönder" />
        }

    </div>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
