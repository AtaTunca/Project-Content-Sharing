
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}




<div class="container">
    <div class="col-md-12">
        <div class="col-md-2" style="
    margin-top: 48px">
            <div style="float:left">
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation"><a href="/Account/Settings">Settings</a></li>
                    <li role="presentation" class="active"><a href="/Account/Password">Password</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">


@using (Html.BeginForm("Password", "Account", FormMethod.Post, new { @class = "Form-Horizontal" }))
{

    @Html.AntiForgeryToken()
                    <div id="legend">
                        <legend style="font-size:xx-large" class="">Parola</legend>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <!-- Username -->
                            <label c for="username">Eski Parola</label>
                            <div class="controls">
                                @Html.Password("OldPassword", null, new { @class = "form-control input-xlarge",@type="password",@id = "username",@name = "password" })
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Password-->
                            <label for="password">Yeni Parola</label>
                            <div class="controls">
                                @Html.Password("NewPassword", null, new { @class = "form-control input-xlarge", @type = "password", @id = "username", @name = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <!-- Password-->
                            <label for="password">Tekrar Yeni Parola</label>
                            <div class="controls">
                                @Html.Password("PasswordAgain", null, new { @class = "form-control input-xlarge", @type = "password", @id = "username", @name = "password" })
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->
                            <div class="controls">
                                <button type="submit" class="btn btn-success">Kaydet</button>
                                
                            </div>
                        </div>
                    </div>
}
            </div>
        </div>
    </div>

</div>
